@model WebDemo.Models.QuizModel
@{
    ViewData["Title"] = "QuizList";
}

<h1>QuizList</h1>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css" integrity="sha256-3sPp8BkKUE7QyPSl6VfBByBroQbKxKG7tsusY2mhbVY=" crossorigin="anonymous" />

<div class="container">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="career-search mb-60">
                <div class="filter-result">
                    @if (ViewBag.quizzes != null && ViewBag.quizzes.Count > 0)
                    {
                        <table class="table table-dark">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Oluşturulma Tarihi</th>
                                    <th scope="col">Eylem</th>
                                </tr>
                            </thead>


                            <tbody>
                                @foreach (var quiz in ViewBag.quizzes)
                                {

                                    <tr>
                                        <td>@quiz.Id</td>
                                        <td>
                                            <form class="job-box d-md-flex align-items-center justify-content-between mb-30" action="/home/SolveQuiz" method="post">
                                                <input type="hidden" asp-for="Id" value="@quiz.Id" />
                                                <input type="hidden" asp-for="Title" value="@quiz.Title" />
                                                <button type="submit">@quiz.Title</button>
                                            </form>
                                        </td>
                                        <td>@quiz.Date</td>
                                        <td>
                                            <form class="job-box d-md-flex align-items-center justify-content-between mb-30" action="/home/DeleteQuiz" method="post">
                                                <input type="hidden" asp-for="Id" value="@quiz.Id" />
                                                <input type="hidden" asp-for="Title" value="@quiz.Title" />
                                                <button type="submit" class="btn btn-primary">Delete</button>
                                            </form>

                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                        <div class="job-right my-4 flex-shrink-0">

                        </div>


                    }


                </div>
            </div>
        </div>
    </div>

</div>

<div class="container">
    <table>
        <tbody>
            <tr>
                <td>
                    <form class="job-box d-md-flex align-items-center justify-content-between mb-30" action="/home/MainScreen">
                        <button type="submit" class="btn btn-primary">Quiz Ekle</button>
                    </form>
                </td>
                <td>
                    <form class="job-box d-md-flex align-items-center justify-content-between mb-30" action="/home/Result">
                        <button type="submit" class="btn btn-primary">Sonuçları Görüntüle</button>
                    </form>
                </td>
            </tr>
        </tbody>
    </table>
</div>

