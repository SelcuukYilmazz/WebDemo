@model WebDemo.Models.UserModel
@{
    ViewData["Title"] = "Login";
}


<div class="container">
    <div class="justify-content-center">
        <h1>Kullanıcı Girişi</h1>
    </div>
</div>
<form action="/home/login" method="post">
    <div class="form-group">
        <label>Kullanıcı Adı</label>
        <input type="text" class="form-control" placeholder="Enter name" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Şifre</label>
        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" asp-for="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
        <button type="submit" class="btn btn-primary">Giriş</button>
    </form>
