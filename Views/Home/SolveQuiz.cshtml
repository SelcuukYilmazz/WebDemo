@model WebDemo.Models.QuizModel
@{
    ViewData["Title"] = "SolveQuiz";
}

<form class="container mt-5" action="/home/CheckQuiz" method="post" runat="server">
    <div class="d-flex justify-content-lg-end">
        <input type="text" class="form-control" placeholder="Enter Your Id" asp-for="UserId" >
    </div>
    <div class="d-flex justify-content-center row">
        <div class="col-md-10 col-lg-10">
            <div class="border">
                <h1 class="mt-1 ml-2">
                    @ViewBag.quiz.Title
                </h1>
            </div>
            <div class="border">
                <h5 class="mt-1 ml-2">
                    @ViewBag.quiz.Text
                </h5>
            </div>
            <div class="border">
                <div class="question bg-white p-3 border-bottom">
                    <div class="d-flex flex-row align-items-center question-title">
                        <h3 class="text-danger">Soru.</h3>
                        <h5 class="mt-1 ml-2">
                            @ViewBag.quiz.Question1
                        </h5>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="Q1" asp-for="Answer1" value="0">
                        <label class="form-check-label" for="Q1">
                            @ViewBag.quiz.Choice1_1
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="Q1" asp-for="Answer1" value="1">
                        <label class="form-check-label" for="Q1">
                            @ViewBag.quiz.Choice1_2
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="Q1" asp-for="Answer1" value="2">
                        <label class="form-check-label" for="Q1">
                            @ViewBag.quiz.Choice1_3
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="Q1" asp-for="Answer1" value="3">
                        <label class="form-check-label" for="Q1">
                            @ViewBag.quiz.Choice1_4
                        </label>
                    </div>
                </div>

            </div>
            <div class="border">
                <div class="question bg-white p-3 border-bottom">
                    <div class="d-flex flex-row align-items-center question-title">
                        <h3 class="text-danger">Soru.</h3>
                        <h5 class="mt-1 ml-2">
                            @ViewBag.quiz.Question2
                        </h5>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="Q2" asp-for="Answer2" value="0">
                        <label class="form-check-label" for="Q2">
                            @ViewBag.quiz.Choice2_1
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="Q2" asp-for="Answer2" value="1">
                        <label class="form-check-label" for="Q2">
                            @ViewBag.quiz.Choice2_2
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="Q2" asp-for="Answer2" value="2">
                        <label class="form-check-label" for="Q2">
                            @ViewBag.quiz.Choice2_3
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="Q2" asp-for="Answer2" value="3">
                        <label class="form-check-label" for="Q2">
                            @ViewBag.quiz.Choice2_4
                        </label>
                    </div>
                </div>
            </div>
            <div class="border">
                <div class="question bg-white p-3 border-bottom">
                    <div class="d-flex flex-row align-items-center question-title">
                        <h3 class="text-danger">Soru.</h3>
                        <h5 class="mt-1 ml-2">
                            @ViewBag.quiz.Question3
                        </h5>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="Q3" asp-for="Answer3" value="0">
