    <input type="hidden" class="form-control" asp-for="Date" value="@DateTime.Now">
    <input type="hidden" class="form-control" asp-for="Completed" value="@true">

    <button type="submit" class="btn btn-primary" id="SubmitQuiz">Formu Gönder</button>
</form>

